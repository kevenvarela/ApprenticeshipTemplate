<div class="container">
  <form>
    <div class="form-signin col-md-6 ">
        <h2 class="form-signin-heading">Identificarse</h2>
        <label>Usuario</label>
        {{input type="text" class="form-control"  value=usuario placeholder="Usuario"}}
        <label>Password</label>
        {{input type="password" class="form-control" minlength="6" value=password placeholder="Password"}}
      <hr>
        <button {{action 'loguearCliente'}} class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
    </div>
  </form>
</div> <!-- /container -->








